                           @onclick="@(() => Nivel = "Doctorado")" />Doctorado
                </label>
                @if (Nivel == "Primaria")
                {
                    iglesiaupdt.NivEstudio = "Primaria";
                }
                @if (Nivel == "Secundaria")
                {
                    iglesiaupdt.NivEstudio = "Secundaria";
                }
                @if (Nivel == "Tecnico")
                {
                    iglesiaupdt.NivEstudio = "Tecnico";
                }
